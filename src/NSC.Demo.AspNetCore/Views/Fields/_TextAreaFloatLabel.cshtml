@model TextAreaModel
<div class="form-float-label form-group inputs @Model.Class @(Model.Inline?"inline":"")" onchange="$('textarea',this).toggleClass('empty',$('textarea',this).val()==='')">
    <textarea class="form-control patch-on-change @(Model.Value.IsNullOrEmpty()?"empty":"")" @(Model.IsReadOnly ? "readonly": "")
              cols="20" id="@(Model.Id)" name="@(Model.Name)" value="@Model.Value" maxlength="@Model.MaxLenght" @(Model.IsRequired? "required":"") > </textarea>
    <span class="input-description"></span>

    <label class="form-float-label-placeholder" for="@(Model.Id)">
        @((String.IsNullOrEmpty(Model.LabelKey) ? Model.Label : T(Model.LabelKey)))
        @if (Model.IsRequired)
        {<required />}
    </label>
</div>