@model Checkbox2Model
@{ var type = Model.Type; var isCheck = type == "checkbox";var isRadio = type == "radio";}
<input id="@Model.Id" @(Model.IsReadOnly?Html.Raw("readonly=\"readonly\""):null) 
       type="@type" value="@(Model.Value)" class="@Model.Class btn-chkbox patch-on-change" name="@Model.Name" @(Html.Raw(Model.IsChecked ? "checked=\"checked\"" : ""))>

<label for="@Model.Id" class="btn btn-chkbox @(Model.Inline?"inline":"")">
    <i class="checked fas @(isRadio?"fa-check-circle":"fa-check-square")"></i>
    <i class="unchecked fas @(isRadio?"fa-circle":"fa-square")"></i>
    <span class="btn-chkbox">@Model.Label</span>
</label>